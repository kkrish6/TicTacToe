<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:gravity="center_horizontal|center_vertical"
    tools:context=".GameActivity">


    <TableLayout
        android:layout_width="@dimen/size_game_board"
        android:layout_height="@dimen/size_game_board"
        android:background="@drawable/board_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp">
            <ImageView
                android:id="@+id/iv_11"
                android:layout_margin="3dp"
                android:layout_width="@dimen/size_player_sign_image"
                android:layout_height="@dimen/size_player_sign_image"
                android:onClick="GameBoardClick"
                />
        <ImageView
            android:id="@+id/iv_12"
            android:layout_margin="3dp"
            android:layout_width="@dimen/size_player_sign_image"
            android:layout_height="@dimen/size_player_sign_image"
            android:onClick="GameBoardClick"
            />

            <ImageView
                android:id="@+id/iv_13"
                android:layout_margin="3dp"
                android:layout_width="@dimen/size_player_sign_image"
                android:layout_height="@dimen/size_player_sign_image"
                android:onClick="GameBoardClick"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp">
            <ImageView
                android:id="@+id/iv_21"
                android:layout_margin="3dp"
                android:layout_width="@dimen/size_player_sign_image"
                android:layout_height="@dimen/size_player_sign_image"
                android:onClick="GameBoardClick"
                />
            <ImageView
                android:id="@+id/iv_22"
                android:layout_margin="3dp"
                android:layout_width="@dimen/size_player_sign_image"
                android:layout_height="@dimen/size_player_sign_image"
                android:onClick="GameBoardClick"
                />

            <ImageView
                android:id="@+id/iv_23"
                android:layout_margin="3dp"
                android:layout_width="@dimen/size_player_sign_image"
                android:layout_height="@dimen/size_player_sign_image"
                android:onClick="GameBoardClick"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp">
            <ImageView
                android:id="@+id/iv_31"
                android:layout_margin="3dp"
                android:layout_width="@dimen/size_player_sign_image"
                android:layout_height="@dimen/size_player_sign_image"
                android:onClick="GameBoardClick"
                />
            <ImageView
                android:id="@+id/iv_32"
                android:layout_margin="3dp"
                android:layout_width="@dimen/size_player_sign_image"
                android:layout_height="@dimen/size_player_sign_image"
                android:onClick="GameBoardClick"
                />

            <ImageView
                android:id="@+id/iv_33"
                android:layout_margin="3dp"
                android:layout_width="@dimen/size_player_sign_image"
                android:layout_height="@dimen/size_player_sign_image"
                android:onClick="GameBoardClick"
                />
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>






